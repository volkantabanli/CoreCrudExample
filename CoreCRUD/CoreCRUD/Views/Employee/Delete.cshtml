@model CoreCRUD.Models.Employee

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deleting Employee</h2>

<h3>Would you like to continue?</h3>
<div class="container p-3 my-3 border">
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.EmpCode)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.EmpCode)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.OfficeLocation)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.OfficeLocation)
        </dd>   
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EmployeeId" />
        <input class="btn btn-primary" type="submit" value="Yes" />
        <a class="btn btn-danger" asp-action="Index">No</a>
    </form>
</div>